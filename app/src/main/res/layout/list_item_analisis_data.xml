<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:minHeight="88dp"
    android:clickable="true"
    android:focusable="true">

    <ImageView
        android:id="@+id/mtrl_list_item_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:padding="16dp"
        android:src="@drawable/ic_analisis_data_24dp_blue"/>

    <LinearLayout
        android:id="@+id/linear_layout_upper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/mtrl_list_item_icon"
        android:paddingTop="16dp"
        android:paddingEnd="16dp"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/judul_analisis_data"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:layout_gravity="center_vertical"
            android:maxLines="1"
            android:text="Analisis Data"
            android:textAppearance="?attr/textAppearanceSubtitle1"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/status_analisis_data"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Status"
            android:textSize="12sp"
            android:textAlignment="textEnd"
            android:textAppearance="?attr/textAppearanceSubtitle1"
            android:textColor="@color/black"/>

    </LinearLayout>

    <TextView
        android:id="@+id/deskripsi_analisis_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear_layout_upper"
        android:layout_gravity="center_vertical"
        android:layout_toEndOf="@id/mtrl_list_item_icon"
        android:paddingEnd="16dp"
        android:maxLines="1"
        android:text="Analisis Data"
        android:textAppearance="?attr/textAppearanceBody2"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/tanggal_analisis_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/deskripsi_analisis_data"
        android:layout_gravity="center_vertical"
        android:layout_toEndOf="@id/mtrl_list_item_icon"
        android:paddingEnd="16dp"
        android:maxLines="1"
        android:text="Analisis Data"
        android:textAppearance="?attr/textAppearanceBody2"
        android:textColor="@color/cardview_shadow_start_color"/>

</RelativeLayout>