<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:paddingVertical="8dp">

    <ImageView
        android:id="@+id/mtrl_list_item_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:padding="16dp"/>

    <TextView
        android:id="@+id/nama_kuis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_toEndOf="@id/mtrl_list_item_icon"
        android:maxLines="1"
        android:paddingEnd="16dp"
        android:textAppearance="?attr/textAppearanceSubtitle1"
        android:textColor="@color/blue_primary"
        tools:text="Nama Kuis" />

    <TextView
        android:id="@+id/nilai_hasil_kuis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/nama_kuis"
        android:layout_gravity="center_vertical"
        android:layout_toEndOf="@id/mtrl_list_item_icon"
        android:paddingEnd="16dp"
        android:maxLines="1"
        android:textAppearance="?attr/textAppearanceBody2"
        android:textColor="@color/black"
        android:textStyle="bold"
        tools:text="Nilai Kuis: 80"/>

    <TextView
        android:id="@+id/nama_user_hasil_kuis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/nilai_hasil_kuis"
        android:layout_gravity="center_vertical"
        android:layout_toEndOf="@id/mtrl_list_item_icon"
        android:paddingEnd="16dp"
        android:maxLines="1"
        android:visibility="gone"
        android:textAppearance="?attr/textAppearanceBody2"
        android:textColor="@color/black"
        tools:text="Dikerjakan Oleh: User Saya"/>

    <TextView
        android:id="@+id/tanggal_hasil_kuis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/nama_user_hasil_kuis"
        android:layout_gravity="center_vertical"
        android:layout_toEndOf="@id/mtrl_list_item_icon"
        android:paddingEnd="16dp"
        android:maxLines="1"
        android:textAppearance="?attr/textAppearanceBody2"
        android:textColor="@color/grey_note"
        tools:text="14 Juni 2022, 03:00"/>

</RelativeLayout>