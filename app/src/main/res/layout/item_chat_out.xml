<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/chat_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_margin="8dp"
        android:background="@color/blue_primary"
        android:padding="10dp">

        <TextView
            android:id="@+id/chat_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:maxWidth="250dp"
            android:minWidth="120dp"
            android:text="Hi"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/date_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/chat_text"
            android:layout_alignEnd="@+id/chat_text"
            android:layout_marginTop="4dp"
            android:paddingStart="16dp"
            android:textColor="@color/white"
            android:textSize="11sp"
            tools:text="20 Desember 2022, 22:33" />

        <TextView
            android:id="@+id/status_read_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/chat_text"
            android:layout_alignStart="@+id/chat_text"
            android:layout_marginTop="4dp"

            android:textColor="@color/white"
            android:textSize="11sp"
            android:text="@string/message_delivered" />


    </RelativeLayout>

</RelativeLayout>