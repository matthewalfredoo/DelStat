<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp"
    android:background="?attr/selectableItemBackground"
    android:minHeight="64dp"
    android:clickable="true"
    android:focusable="true">

    <!--<ImageView
        android:id="@+id/foto_profil_user_chat"
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        android:src="@drawable/ic_chat_24dp_blue"
        android:paddingHorizontal="8dp"/>-->

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/foto_profil_user_chat"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:paddingHorizontal="8dp"
        app:srcCompat="@drawable/ic_chat_24dp_blue"
        app:shapeAppearanceOverlay="@style/roundedImageView"/>

    <TextView
        android:id="@+id/nama_user_chat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/foto_profil_user_chat"
        android:maxLines="1"
        android:paddingTop="12dp"
        android:paddingEnd="16dp"
        android:text="Nama User"
        android:textAppearance="?attr/textAppearanceSubtitle1"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/tanggal_terakhir_chat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/nama_user_chat"
        android:layout_gravity="center_vertical"
        android:layout_toEndOf="@id/foto_profil_user_chat"
        android:paddingEnd="16dp"
        android:maxLines="2"
        android:text="Tanggal Terakhir"
        android:textAppearance="?attr/textAppearanceBody2"
        android:textColor="@color/grey_input"/>

</RelativeLayout>